{
  "name": "resource-management-server",
  "version": "1.0.0",
  "description": "Backend API for Resource Management Tool",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc && npm run copy:sql",
    "copy:sql": "mkdir -p dist/database && cp src/database/*.sql dist/database/ 2>/dev/null || true",
    "start": "node dist/server.js",
    "db:migrate": "node dist/database/migrate.js",
    "db:migrate:complete": "node dist/database/runMigrations.js --complete",
    "db:migrate:complete": "node dist/database/runMigrations.js --complete",
    "db:seed": "node dist/database/seed.js"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^10.0.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
